#!/usr/bin/env sh

# In order to use this script, first configure middleman-s3_sync
# in config.rb

set -e
ENV=$1

if [[ $# -ne 1 ]]; then
  echo "Please specify an environment."
  exit 1
else
  bundle exec middleman build --clean --environment=$ENV
  bundle exec middleman s3_sync --environment=$ENV
fi
